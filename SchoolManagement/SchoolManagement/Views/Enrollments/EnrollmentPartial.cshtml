@model IEnumerable<SchoolManagement.Models.Enrollment>


@if (Model.Count() < 1)
{
    <h1 class="text-center">No Enrollments</h1>
}

else
{
    

    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Course.courseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.studentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teacherID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Course.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.firstName) @Html.DisplayFor(modelItem => item.Student.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.firstName) @Html.DisplayFor(modelItem => item.Teacher.lastName)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.enrollmentID })
                </td>
            </tr>
        }

    </table>
}
